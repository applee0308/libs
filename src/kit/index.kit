<body>
	<button id="layer">Layer</button>
    <!-- @import "./utils/loading" -->
    <script src="http://cdn.bootcss.com/jquery/2.1.0/jquery.js"></script>
    <script src="../dist/js/index.bundle.js"></script>
    <script>
        $("#layer").on("click", function() {
            layer.open({
                content: "你是想确认呢，还是想取消呢？",
                btn: ["确认", "取消"],
                shadeClose: false,
                yes: function(){
                    layer.open({content: "你点了确认", time: 1});
                }, no: function(){
                    layer.open({content: "你选择了取消", time: 1});
                }
            });
        });
    </script>
</body>
